//to find the element with highest occurrence
module tb_mode_finder;
  int modes[] = '{1,2,3,2,4,2,1,3,3,3};
  int count[int]; 
  int i;
  int max_count = 0;
  int most_frequent = 0;
  initial begin
    for (i = 0; i < modes.size(); i = i + 1) begin
      count[modes[i]]++;
    end
    foreach (count[mode]) begin
      if (count[mode] > max_count) begin
        max_count = count[mode];
        most_frequent = mode;
      end
      else if (count[mode] == max_count && mode < most_frequent) begin
        most_frequent = mode;
      end
    end
    $display("Most Frequent Mode: %0d (Count=%0d)", most_frequent, max_count);
    $finish;
  end
endmodule
// output 
//Most Frequent Mode: 3 (Count=4)
