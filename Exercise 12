//to increase queue size due to queue growing
module dma_descriptor_queue;
  initial begin
    int desc_queue[$]; 
    int id;
    for (id = 1; id <= 15; id = id + 1) begin
      desc_queue.push_back(id);  // Add new ID to queue
      $display("Enqueue %0d — Queue size: %0d", id, desc_queue.size());
    end
  end
endmodule
